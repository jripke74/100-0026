<%- include('includes/head.ejs', { title: 'Login' }) %>
  <link rel="stylesheet" href="/styles/forms.css">
  <link rel="stylesheet" href="/styles/auth.css">
</head>
  <%- include('includes/header.ejs') %>
  <main id="signup">
    <% if (inputData.hasError) { %>
      <p id="input-error"><%= inputData.message %></p>
    <% } %>
    <form action="/login" method="POST">
      <input type="hidden" value="<%= csrfToken %>" name="_csrf">
      <div class="form-control">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" value="<%= inputData.password %>" required>
      </div>
      <div id="auth-alternative">
        <a href="/signup" class="btn btn-alt">Create a new user</a>
      </div>
    </form>  
  </main> 
</html>
